---
const jobs = [
  {
    company: "Vertiqul",
    title: "Developer",
    time: "Aug 2020 - Sep 2022",
  },
  {
    company: "GloDecor",
    title: "Freelance Developer & Designer",
    time: "Jul 2020",
  },
  {
    company: "Navajas Barber Shop",
    title: "Freelance Developer & Designer",
    time: "Jun 2020",
  },
];
---

<section class="px-[10vw] py-8 sm:py-10 lg:py-12">
  <h2 class="text-3xl font-bold mb-8">Employment History</h2>

  <ol class="flex gap-8 flex-col lg:flex-row items-center">
    {
      jobs.map((job) => (
        <li class="flex-1 max-w-sm w-full">
          <div class="aspect-square bg-neutral-100 mb-4" />

          <h3 class="text-xl font-bold">{job.company}</h3>
          <p class="text-sm text-neutral-500">{job.title}</p>
          <p class="text-sm text-neutral-500">{job.time}</p>
        </li>
      ))
    }
  </ol>
</section>
