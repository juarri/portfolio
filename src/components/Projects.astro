---

<section id="projects" class="px-[5vw] py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8 flex gap-2 text-neutral-500 stroke-neutral-500">
      <Icon name="hammer" class="relative bottom-px w-5" />
      <h2 class="text-sm font-bold">Projects</h2>
    </div>

    <ul class="grid gap-8 sm:grid-cols-2">
      {
        projects.map((project) => (
          <li>
            <div class="flex items-center">
              <a
                href={project.url}
                target="_blank"
                class="mb-3 flex items-center"
              >
                <Image
                  src={project.logo.src}
                  alt={`${project.name} Logo`}
                  class={project.logo.class}
                />
                <h3 class="ml-4 font-bold text-xl">{project.name}</h3>
                <Icon name="arrow-right" class="ml-2 -rotate-45 w-5" />
              </a>
            </div>

            <div class="mb-3 flex gap-2.5 items-center text-neutral-500">
              {project.title}
            </div>

            <ul class="flex flex-wrap gap-4">
              {project.tech.map((tech) => (
                <li class="inline-flex gap-1.5 items-center px-2 py-0.5 bg-neutral-50 border border-neutral-200 text-xs rounded-full text-neutral-500 font-bold">
