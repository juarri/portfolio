---
import "@fontsource/inter/variable-full.css"; // This contains ALL variable axes. Font files are larger.

import Header from "./Header.astro";
import Footer from "./Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Julian Rivera's portfolio. Full stack web developer adept at problem solving, accessibility and collaborating. Interested in learning new technologies or novel ways to approach design problems."
    />
    <title>juarri - {title}</title>

    <script
      async
      defer
      data-website-id="eebcb503-610c-4174-9b8a-5e453597bd3b"
      src="https://analytics.juarri.com/umami.js"
    ></script>
  </head>
  <body>
    <Header />
    <div id="content">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
  }

  html {
    font-family: "InterVariable", system-ui, sans-serif;
  }

  body {
    margin: 0;
    padding: 0;

    min-height: 100vh;

    display: flex;
    flex-direction: column;
  }

  #content {
    flex: 1;
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
